<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorDarkGreen"
                android:gravity="center|start"
                android:padding="10dp"
                android:text="Edit Profile"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />


            <EditText
                android:id="@+id/edtFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:drawableStart="@mipmap/ic_names"
                android:drawableLeft="@mipmap/ic_names"
                android:gravity="center|start"
                android:background="@drawable/edittext_bg_black"    android:hint="First Name"
                android:lines="1"
                android:padding="1dp"
                android:textColor="@color/colorBlack"
android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bg_black"   android:padding="1dp"
                android:drawableStart="@mipmap/ic_names"
                android:drawableLeft="@mipmap/ic_names"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:gravity="center|start"
                android:hint="Last Name"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittext_bg_black"   android:layout_marginRight="20dp"
                android:drawableStart="@mipmap/ic_names"
                android:padding="1dp"
                android:drawableLeft="@mipmap/ic_names"
                android:gravity="center|start"
                android:hint="User Name"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bg_black"   android:padding="1dp"
                android:drawableStart="@mipmap/ic_email"
                android:drawableLeft="@mipmap/ic_email"
                android:gravity="center|start"
                android:hint="E-mail"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg_black"  android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="1dp"
                android:drawableStart="@mipmap/ic_phone_number"
                android:drawableLeft="@mipmap/ic_phone_number"
                android:gravity="center|start"
                android:hint="Phone Number"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="1dp"
                android:inputType="none"
                android:layout_marginRight="20dp"
                android:drawableStart="@mipmap/ic_date_of_birth"
                android:drawableLeft="@mipmap/ic_date_of_birth"
                android:gravity="center|start"
                android:background="@drawable/edittext_bg_black"   android:hint="Date of Birth"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

    <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:padding="1dp"
                android:inputType="none"
                android:layout_marginRight="20dp"
                android:drawableStart="@mipmap/ic_date_of_birth"
                android:drawableLeft="@mipmap/ic_date_of_birth"
                android:gravity="center|start"
                android:background="@drawable/edittext_bg_black"
        android:hint="Lives In"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtOccupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bg_black"  android:padding="1dp"
                android:drawableStart="@mipmap/ic_occupation"
                android:drawableLeft="@mipmap/ic_occupation"
                android:gravity="center|start"
                android:hint="Occupation"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/edittext_bg_black"  android:layout_marginRight="20dp"
                android:padding="1dp"
                android:drawableStart="@mipmap/ic_gender"
                android:drawableLeft="@mipmap/ic_gender"
                android:gravity="center|start"
                android:hint="Gender"
                android:lines="1"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtAboutMe"
                android:layout_width="match_parent"
                android:padding="1dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/edittext_bg_black"  android:drawableStart="@mipmap/ic_about_me"
                android:drawableLeft="@mipmap/ic_about_me"
                android:gravity="center|start"
                android:hint="About Me"
                android:lines="4"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtChangePassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:drawableEnd="@mipmap/ic_black_down_arrow"
                android:drawableRight="@mipmap/ic_black_down_arrow"
                android:gravity="center|start"
                android:text="Change Password"
                android:textColor="@color/colorBlack"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/llChangePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtCurrPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:layout_below="@+id/edtUserName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableStart="@mipmap/ic_password"
                    android:drawableLeft="@mipmap/ic_password"
                    android:background="@drawable/edittext_bg_black"      android:gravity="center|start"
                    android:hint="Current Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg_black"  android:layout_below="@+id/edtUserName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:drawableStart="@mipmap/ic_password"
                    android:drawableLeft="@mipmap/ic_password"
                    android:gravity="center|start"
                    android:padding="1dp"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtConfPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edtUserName"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:padding="1dp"
                    android:drawableStart="@mipmap/ic_password"
                    android:drawableLeft="@mipmap/ic_password"
                    android:gravity="center|start"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_bg_black"  android:lines="1"
                    android:textColor="@color/colorBlack"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/green_gradient"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Save"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />

</LinearLayout>